<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="robots" content="noindex, nofollow">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <title>WAP - Cards</title>
    </head>
    <body>
        <%- include("../partials/navbar.ejs") %>
        <div class="container-fluid p-5">
            <% if (wap.sprint) { %>
                <div class="row mb-5 text-center">
                    <h1>Cards waiting for approvals</h1>
                    <h4 class="text-muted">Sprint: <%= wap.sprint.name %></h4>
                </div>
                <div class="row row-cols-1 row-cols-md-3 g-5 mb-5">
                    <% for (const card of waitingApproval) { %>
                        <div class="col">
                            <%- include("../partials/card.ejs", { card: card, canEdit: true, canApprove: true, canChangeStatus: false }) %>
                        </div>
                    <% } %>
                </div>
                <% if (waitingApproval == null || waitingApproval.length == 0) { %>
                    <div class="row text-center">
                        <h4 class="text-muted">No cards waiting approval</h4>
                    </div>
                <% } %>
                <div class="row mb-5 pt-5">
                    <span class="border-top border-2"></span>
                </div>
                <div class="row mb-5 text-center">
                    <h1>Active cards</h1>
                    <h4 class="text-muted">Sprint: <%= wap.sprint.name %></h4>
                </div>
                <div class="row row-cols-1 row-cols-md-3 g-5">
                    <% for (const card of allApproved) { %>
                        <div class="col">
                            <%- include("../partials/card.ejs", { card: card, canEdit: true, canApprove: false, canChangeStatus: false }) %>
                        </div>
                    <% } %>
                </div>
                <% if (allApproved == null || allApproved.length == 0) { %>
                    <div class="row text-center">
                        <h4 class="text-muted">No cards approved</h4>
                    </div>
                <% } %>
            <% } else { %>
                <div class="row mb-5 text-center">
                    <h1>No active sprint</h1>
                    <h4 class="text-muted">Start a sprint to manage cards</h4>
                </div>
            <% } %>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    </body>
</html>