<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="robots" content="noindex, nofollow">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <title>WAP - PLDs</title>
    </head>
    <body>
        <%- include("../partials/navbar.ejs") %>
        <div class="container-xxl bd-gutter flex-wrap flex-lg-nowrap p-5">
            <div class="row mb-5 text-center">
                <h1>PLDs</h1>
            </div>
            <div class="row">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Sprint</th>
                            <th scope="col">Version</th>
                            <th scope="col">Download Path</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let aPLD of allPLDs) { %>
                            <tr>
                                <th scope="row"><%= aPLD.id %></th>
                                <td><%= aPLD.sprint.name %></td>
                                <td><%= aPLD.versionInSprint %></td>
                                <td><a href="<%= aPLD.downloadPath %>"><%= aPLD.downloadPath %></a></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <a type="button" class="btn btn-outline-success" href="/pld/setGenerator">Generate a PLD</a>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    </body>
</html>